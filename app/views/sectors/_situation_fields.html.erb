<div class="nested-fields">
	<div class="form-group">
  	<%= f.label :problems, :class => 'control-label col-md-2' %>
  	<div class="col-md-10">
     	<%= f.collection_select :problem_id, Problem.order(:name), :id, :name, {prompt: false},{class: "form-control"} %>
  	</div>
	</div>

	<div class="form-group links">
  	<div class='col-md-offset-2 col-md-10'>
  	<%= link_to_remove_association f, class: 'btn btn-danger', title: 'Remover' do %>
      	<%= glyph 'trash' %> Remover
    	<%- end -%>
  	</div>
	</div>
</div>
